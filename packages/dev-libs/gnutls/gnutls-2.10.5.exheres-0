require easy-multibuild gnu

SUMMARY="TLS 1.0/1.1 and SSL 3.0 Implementation"

LICENCES="GPL-3"
SLOT="0"
PLATFORMS="~amd64 ~ppc64 ~x86"
MYOPTIONS="doc multibuild_c: 32 64"

DEPENDENCIES="
    build:
        doc? ( dev-doc/gtk-doc[>=1.1] )
    build+run:
        dev-libs/libgcrypt[>=1.2.4][multibuild_c:*(?)?]
        dev-libs/libtasn1[>=1.8][multibuild_c:*(?)?]
        sys-libs/zlib[>=1.2.3][multibuild_c:*(?)?]
"

DEFAULT_SRC_PREPARE_PATCHES=( "${FILES}/${PN}-sydbox.patch")

DEFAULT_SRC_CONFIGURE_PARAMS=( --disable-guile --disable-valgrind-tests --with-zlib )
DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( 'doc gtk-doc' )

