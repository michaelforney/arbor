require botan

PLATFORMS="~amd64"

src_configure() {
    edo ./configure.py \
        --libdir=${LIBDIR} \
        --prefix=/usr \
        --enable-shared \
        --makefile-style=unix \
        --with-bzip2 \
        --with-openssl \
        --with-zlib \
        --with-tr1-implementation=system \
        $(option_with gmp gnump)
}

