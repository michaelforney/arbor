require botan python [ python_dep=2.6 ]

PLATFORMS="~amd64"

src_configure() {
    edo ./configure.py \
        --distribution-info=Exherbo \
        --libdir=${LIBDIR} \
        --prefix=/usr \
        --enable-shared \
        --makefile-style=unix \
        --with-bzip2 \
        --with-openssl \
        --with-zlib \
        --with-python-version=$(python_get_abi) \
        --with-tr1-implementation=system \
        --without-doxygen \
        $(option_with boost boost-python) \
        $(option_with doc sphinx) \
        $(option_with gmp gnump)
}

