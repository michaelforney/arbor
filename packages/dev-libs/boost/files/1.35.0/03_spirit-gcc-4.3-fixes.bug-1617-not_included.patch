+++ b/libs/spirit/test/mix_and_match_trees.cpp
@@ -54,7 +54,7 @@ struct my_grammar : grammar<my_grammar>
 
         typedef rule<ast_scanner> ast_rule;
         typedef rule<pt_scanner> pt_rule;
