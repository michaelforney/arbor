+        typedef rule<Scanner> rule_;
 
         definition(my_grammar const & /* self */)
         {
@@ -62,12 +62,12 @@ struct my_grammar : grammar<my_grammar>
             start_ = gen_pt_node_d[ pt_rule_ ];
         }
 
