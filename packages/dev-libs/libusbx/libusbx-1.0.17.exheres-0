require sourceforge easy-multibuild [ multiunpack=true ]

SUMMARY="library that provides generic access to USB devices"
DESCRIPTION="
libusbx a fork of libusb and designed as a drop in replacement for it.
"

BUGS_TO="philantrop@exherbo.org"
REMOTE_IDS="freecode:${PN}"

LICENCES="LGPL-2.1"
SLOT="1"
PLATFORMS="~amd64 ~ppc64 ~x86"
MYOPTIONS="
    syslog [[ description = [ output logging messages to syslog ] ]]
    multibuild_c: 32 64
"

DEPENDENCIES="
    build:
        sys-kernel/linux-headers[>=2.6.27]
        sys-libs/glibc[>=2.9]
    build+run:
        sys-apps/systemd [[ note = [ udev is used for device enumeration and hotplug support ] ]]
        !dev-libs/libusb:1 [[
            description = [ dev-libs/libusbx is a fork and drop-in replacement of dev-libs/libusb ]
            resolution = uninstall-blocked-after
        ]]
"

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --enable-udev
    --disable-static
)

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=(
    "syslog system-log"
)

DEFAULT_SRC_CONFIGURE_TESTS=( '--enable-tests-build --disable-tests-build' )

test_one_multibuild() {
    default

    edo tests/stress
}

