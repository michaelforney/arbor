if (($(ever range 2) % 2)); then
    require gnu [ alpha=true suffix=gz ]
else
    require gnu [ suffix=gz ]
fi

export_exlib_phases src_configure src_install

SUMMARY="Basic directory searching utilities."

LICENCES="GPL-2"
SLOT="0"
MYOPTIONS=""

DEPENDENCIES="
    test:
        dev-util/dejagnu
"

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --enable-d_type-optimisation
    --enable-leaf-optimisation
    --enable-nls
    --disable-assert
    --libexecdir=/usr/libexec/${PN}
    --without-included-regex
)

findutils_src_configure() {
    # Configuration takes a million years without this hack.
    sydboxcmd nowrap/lstat
    default
    sydboxcmd wrap/lstat
}

findutils_src_install() {
    default
    edo rmdir "${IMAGE}"/var{/lib,}
}

