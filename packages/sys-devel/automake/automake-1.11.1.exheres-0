require automake

PLATFORMS="~amd64 ~arm ~ia64 ~ppc64 ~x86"

src_install() {
    automake_src_install

    for man in "${IMAGE}"/usr/share/man/man?/*-${SLOT}-${SLOT}.? ; do
        edo mv "${man}" "${man/${SLOT}-${SLOT}/${SLOT}}"
    done
}

