SUMMARY="Wrapper script for automake versions"
HOMEPAGE="http://www.exherbo.org/"
DOWNLOADS=""

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~arm ~ia64 ~ppc64 ~x86"
MYOPTIONS=""

DEPENDENCIES=""

WORK=${WORKBASE}

src_install() {
    dobin "${FILES}"/${PV}/${PN}.sh
    local i
    for i in aclocal automake; do
        dosym /usr/bin/${PN}.sh /usr/bin/${i}
    done
}

