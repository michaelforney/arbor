[Unit]
Description=Dynamic DNS updater client
Requires=network.target

[Service]
Type=forking
User=ddclient
Group=ddclient
ExecStart=/usr/sbin/ddclient -pid /run/ddclient/ddclient.pid -file /etc/ddclient/ddclient.conf -syslog
PIDFile=/run/ddclient/ddclient.pid

[Install]
WantedBy=multi-user.target
