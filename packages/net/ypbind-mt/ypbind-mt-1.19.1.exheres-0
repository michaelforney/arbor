SUMMARY="Multithreaded ypbind daemon for linux"
HOMEPAGE="http://www.linux-nis.org/nis/ypbind-mt/"
DOWNLOADS="mirror://kernel/linux/utils/net/NIS/${PNV}.tar.bz2"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    post,recommended:
        net/yp-tools
"

DEFAULT_SRC_CONFIGURE_PARAMS=( --disable-slp )

src_install() {
    default

    insinto /etc
    newins "${WORK}/etc/yp.conf" yp.conf.example

    newinitd "${FILES}/ypbind-init.d" ypbind
}

