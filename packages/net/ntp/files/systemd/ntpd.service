[Unit]
Description=Network Time Service
After=network.target nss-lookup.target

[Service]
Type=forking
ExecStart=/usr/sbin/ntpd -u ntp:ntp -g
PrivateTmp=true
ControlGroup=cpu:/
Restart=always

[Install]
WantedBy=multi-user.target
