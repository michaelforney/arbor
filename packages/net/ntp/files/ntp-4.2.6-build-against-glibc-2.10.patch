Source: http://cvs.fedoraproject.org/viewvc/devel/ntp/ntp-4.2.4p7-nano.patch?revision=1.1
Upstream: https://support.ntp.org/bugs/show_bug.cgi?id=1219
Reason: Fix build against glibc-2.10.1 that declares ADJ_NANO but not MOD_NANO in sys/timex.h.

diff --git a/include/ntp_syscall.h b/include/ntp_syscall.h
index 521e753..615064b 100644
--- a/include/ntp_syscall.h
+++ b/include/ntp_syscall.h
@@ -14,6 +14,14 @@
 # include <sys/timex.h>
 #endif
 
+#if defined(ADJ_NANO) && !defined(MOD_NANO)
+# define MOD_NANO ADJ_NANO
+#endif
+
+#if defined(ADJ_TAI) && !defined(MOD_TAI)
+# define MOD_TAI ADJ_TAI
+#endif
+
 #ifndef NTP_SYSCALLS_LIBC
 #ifdef NTP_SYSCALLS_STD
 # define ntp_adjtime(t)		syscall(SYS_ntp_adjtime, (t))
