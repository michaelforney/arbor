SUMMARY="compiler cache"
HOMEPAGE="http://ccache.samba.org/"
DOWNLOADS="http://samba.org/ftp/ccache/${PNV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES=""

src_install() {
    default

    insinto /usr/share/doc/$PNVR/html
    doins web/*.html

    dodir /usr/lib/ccache/bin
    insinto /usr/lib/ccache/bin
    local f
    for f in {${CHOST}-,}{gcc,g++,c++}; do
        dosym /usr/bin/ccache /usr/lib/ccache/bin/${f}
    done
}
